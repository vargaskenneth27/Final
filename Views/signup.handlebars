<!--Form to sign up to become a memember -->
<form id="account" method="post" action="/auth/signup" style="border:1px solid #ccc">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <label for="name"><b>First Name :</b></label>
    <input type="text" placeholder="Enter First Name" name="fname" required><br>

    <label for="name"><b>Last Name :</b></label>
    <input type="text" placeholder="Enter Last Name" name="lname" required><br>

    <label for="email"><b>Email :</b></label>
    <input type="email" placeholder="Enter Email" name="email" required><br>

    <label for="username"><b>User Name :</b></label>
    <input type="text" placeholder="Enter User Name" name="username" required><br>

    <label for="psw"><b>Password :</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required><br>

    <label for="psw-repeat"><b>Repeat Password :</b></label>
    <input type="password" placeholder="Repeat Password" name="psw_repeat" required><br>

    <label for="date"><b>Date of Birth :</b></label>
    <input type="date" name="bday" required><br>

    <label for="male">
      <input type="radio" id="male" name="gender" value="male" style="margin-bottom:15px"><b>Male</b>
    </label>
    <label for="female">
      <input type="radio" id="female" name="gender" value="female" style="margin-bottom:15px"><b>Female</b>
    </label><br>

    <label for="email"><b>Shoe Choose One :</b></label>
    <input type="text" placeholder="Enter Shoe 1" name="eshoe" required><br>

    <label for="email"><b>Shoe Choose Two :</b></label>
    <input type="text" placeholder="Enter Shoe 2" name="eshoe2" required><br>

    <label for="email"><b>Shoe Choose Three :</b></label>
    <input type="text" placeholder="Enter Shoe 3" name="eshoe3" required><br>
    <br>
    <label>
      <input type="checkbox" checked="checked" name="offers" value="Y" style="margin-bottom:15px"> Sign up for emails to hear exclusive offers!
    </label>

    <div class="clearfix">
      <button type="button" class="cancelbtn" onclick="myFunction()" value="Resetform" style = "background-color: #82F6FF;">Cancel</button>
      <button type="submit" class="signupbtn" style = "background-color: #82F6FF;">Sign Up</button>
    </div>
    {{#if message}}
      <h4 class ="alert alert-danger mt-4">{{message}}</h4>
    {{/if}}
  </div>
</form>
<!--Script to reset entry when hit cancel button -- >
